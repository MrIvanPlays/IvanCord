+package com.mrivanplays.ivancord.event;
+
+import java.lang.invoke.MethodHandle;
+import java.lang.invoke.MethodHandles;
+import java.lang.reflect.Method;
+import java.lang.reflect.Modifier;
+import lombok.SneakyThrows;
+
+class MethodHandleEventExecutor implements EventExecutor
+{
+
+    private final Class<?> eventClass;
+    private final MethodHandle handle;
+    private final boolean isStatic;
+
+    @SneakyThrows
+    MethodHandleEventExecutor(Method method)
+    {
+        this.eventClass = method.getParameterTypes()[0];
+        this.handle = MethodHandles.lookup().unreflect( method );
+        this.isStatic = Modifier.isStatic( method.getModifiers() );
+    }
+
+    @Override
+    @SneakyThrows
+    public void invoke(Object listener, Object event)
+    {
+        if ( eventClass.isInstance( event ) )
+        {
+            // ??????
+            return;
+        }
+
+        if ( isStatic )
+        {
+            executeStatic( event );
+        } else
+        {
+            handle.invoke( listener, event );
+        }
+    }
+
+    @SneakyThrows
+    public void executeStatic(Object event)
+    {
+        handle.invoke( event );
+    }
+}
